/* ESLint | https://eslint.org/docs/user-guide/configuring */

{
  /* このファイルの親階層以上ではルールを適用しない */
  "root": true,

  /* 適用する環境 (環境に応じてグローバル変数が事前に定義される) */
  "env": { "browser": true, "node": true, "commonjs": true, "es6": true },

  /* 公式推奨のルール */
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react",
    "prettier/@typescript-eslint"
  ],

  /* 特定のライブラリやフレームワーク用の追加ルール */
  "plugins": ["react-hooks", "react", "@typescript-eslint"],

  /* ESLint で使用する構文解析プログラム */
  "parser": "@typescript-eslint/parser",

  /* ESLint で使用する構文解析プログラム */
  "parserOptions": {
    /* ES Modules を読み込む */
    "sourceType": "module",
    /* ES2016-2020 の JavaScript を読み込む */
    "ecmaVersion": 2020,
    /* React も対象とする */
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "settings": {
    "react": {
      /* React のバージョンは自動で検出する */
      "version": "detect"
    }
  },

  /* env に含まれない独自のグローバル変数 */
  "globals": {},

  /* extends に含まれない独自のルール */
  "rules": {
    /* TypeScirpt なので prop-types は要らない */
    "react/prop-types": "off",
    /* Next.js では内部リンクに href 属性を持たない a タグを使用するため、これを認める */
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["invalidHref", "preferButton"]
      }
    ]
  },

  /* 特定ファイルのルールをオーバーライド */
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/explicit-function-return-type": "off"
      }
    }
  ]
}
